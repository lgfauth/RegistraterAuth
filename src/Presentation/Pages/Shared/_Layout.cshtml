<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RegistraterAuthWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg custom-navbar">
            <a class="navbar-brand" href="/">LFauth Dev Hub</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link custom-nav-link @(Context.Request.Path == "/" ? "active" : "")" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link custom-nav-link @(Context.Request.Path == "/Register" ? "active" : "")" href="/Register">User subscription</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link custom-nav-link @(Context.Request.Path == "/Authenticate" ? "active" : "")" href="/Authenticate">Authentication</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <main class="container mt-4 main-container">
        @RenderBody()
    </main>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>